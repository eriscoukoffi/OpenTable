<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/lay_header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height_40dp"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/rect_stroke_round_4_gray__width_1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/unit_name"
                style="@style/editViewStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="请输入您的单位名称"
                android:maxLines="1"
                android:paddingLeft="@dimen/margin_2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:src="@mipmap/search" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height_40dp"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/rect_stroke_round_4_gray__width_1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/name"
                style="@style/editViewStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="请输入您的姓名"
                android:paddingLeft="@dimen/margin_2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_height_40dp"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/rect_stroke_round_4_gray__width_1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/card_num"
                style="@style/editViewStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="请输入您的身份证号码后六位"
                android:paddingLeft="@dimen/margin_2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/band"
                android:layout_width="91dp"
                android:layout_height="37dp"
                android:background="@drawable/selector_pressed_color_red"
                android:gravity="center"
                android:text="绑    定"
                android:textColor="@color/shop_white"
                android:textSize="@dimen/text_normal" />

            <TextView
                android:id="@+id/cancel"
                android:layout_width="91dp"
                android:layout_height="37dp"
                android:layout_marginLeft="64dp"
                android:background="@drawable/selector_pressed_color_gray"
                android:gravity="center"
                android:text="下次再说"
                android:textColor="@color/shop_black"
                android:textSize="@dimen/text_normal" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>