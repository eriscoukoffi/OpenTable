<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yigu.opentable.activity.campaign.CompanyActivity">


    <include
        layout="@layout/lay_header"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lay_header"
        android:layout_above="@+id/ll_join"
        ></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/ll_join"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:id="@+id/join"
            android:layout_width="155dp"
            android:layout_height="43dp"
            android:text="个人入口"
            android:textSize="@dimen/text_normal"
            android:textColor="@color/shop_white"
            android:gravity="center"
            android:background="@drawable/selector_pressed_color_red"
            />

    </LinearLayout>

</RelativeLayout>
